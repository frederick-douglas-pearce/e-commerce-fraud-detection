{
  "data": {
    "default_random_seed": 1,
    "test_size": 0.2,
    "val_size": 0.25,
    "default_data_dir": "data",
    "default_data_file": "transactions.csv",
    "target_column": "is_fraud"
  },
  "paths": {
    "feature_lists": "models/feature_lists.json",
    "model_metadata": "models/model_metadata.json",
    "logs_dir": "models/logs"
  },
  "training": {
    "cv_folds": 4,
    "cv_shuffle": true
  },
  "model_defaults": {
    "xgboost": {
      "n_estimators": 100,
      "max_depth": 4,
      "learning_rate": 0.1,
      "subsample": 0.9,
      "colsample_bytree": 0.9,
      "min_child_weight": 7,
      "gamma": 0.7,
      "reg_alpha": 0.0,
      "reg_lambda": 1.0,
      "scale_pos_weight": 8,
      "eval_metric": "aucpr"
    },
    "random_forest": {
      "n_estimators": 400,
      "max_depth": 20,
      "min_samples_split": 10,
      "min_samples_leaf": 5,
      "max_features": "sqrt",
      "class_weight": "balanced_subsample"
    }
  },
  "deployment": {
    "default_threshold": 0.5,
    "threshold_targets": {
      "conservative_90pct_recall": 0.90,
      "balanced_85pct_recall": 0.85,
      "aggressive_80pct_recall": 0.80
    },
    "risk_levels": {
      "low": {"max_probability": 0.3},
      "medium": {"max_probability": 0.7},
      "high": {"max_probability": 1.0}
    },
    "model_info_defaults": {
      "model_name": "XGBoost Fraud Detector",
      "model_type": "XGBClassifier",
      "version": "1.0",
      "framework": "xgboost + scikit-learn",
      "python_version": "3.12+"
    },
    "preprocessing_info": {
      "categorical_encoding": "OrdinalEncoder (handle_unknown=use_encoded_value)",
      "numeric_scaling": "None (tree-based model)",
      "binary_features": "Passthrough (no transformation)"
    }
  }
}
